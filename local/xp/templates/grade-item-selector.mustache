{{!
    Grade item selector.
}}
<div class="local_xp-grade-item-selector-widget" id="local_xp-grade-item-selector-widget-{{uniqid}}">
    {{#canchangecourse}}
    <div class="course-search">
        <div class="course-selected" style="display: none">
            <label style="display: inline-block">
                {{#str}}courseselectedcolon, block_xp{{/str}} <span></span>
            </label>
            <button class="btn btn-sm btn-small btn-secondary course-selection-change">{{#str}}change, core_admin{{/str}}</button>
        </div>
        <div class="course-not-selected">
            <div class="form-group">
                <label for="local_xp-grade-item-selector-widget-{{uniqid}}-course-field">{{#str}}searchandselectcourse, block_xp{{/str}}</label>
                <input id="local_xp-grade-item-selector-widget-{{uniqid}}-course-field" style="margin: 0; width: 95%" type="text" class="form-control search-term-course" placeholder={{#quote}}{{#str}}entersearchterm, block_xp{{/str}}{{/quote}}>
            </div>
        </div>
    </div>
    {{/canchangecourse}}
    <div class="cm-search" style="display: none">
        <input style="margin: 0; width: 95%" type="text" class="form-control search-term-grade-item" placeholder={{#quote}}{{#str}}filtergradeitems, local_xp{{/str}}{{/quote}}>
    </div>
    <div class="m-t-1 search-result-contents">
        {{> block_xp/resource-selector-contents }}
    </div>
</div>
{{#js}}
require(['jquery', 'local_xp/grade-item-selector'], function($, GradeItemSelector) {
    var selector = '#local_xp-grade-item-selector-widget-{{uniqid}}';
    var initWithCourse = {{{initwithcoursejson}}};
    GradeItemSelector.init($(selector), initWithCourse);
});
{{/js}}
