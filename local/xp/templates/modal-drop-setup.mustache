{{!
    @template local_xp/modal-drop-setup

    Modal popup notification.

    Example context (json):
    {
    }
}}
{{< core/modal }}
    {{$title}}
        {{! Note, the title won't display on Moodle 3.3 with Boost due to incorrect template. }}
        {{ name }}
    {{/title}}
    {{$body}}
        <div class="block_xp">
            <p>{{#str}} copypastedropsnippet, local_xp {{/str}}</p>
            <div class="xp-flex">
                <div data-content="shortcode" class="xp-w-full xp-bg-gray-100 xp-font-mono xp-px-4 xp-py-2 xp-text-center">{{shortcode}}</div>
                <button data-action="copy" type="button" class="btn btn-default btn-secondary xp-ml-2 xp-px-2 xp-p-0 xp-m-0 xp-flex xp-items-center xp-justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="xp-h-5 xp-w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M8 2a1 1 0 000 2h2a1 1 0 100-2H8z" />
                    <path d="M3 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v6h-4.586l1.293-1.293a1 1 0 00-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L10.414 13H15v3a2 2 0 01-2 2H5a2 2 0 01-2-2V5zM15 11h2a1 1 0 110 2h-2v-2z" />
                    </svg>
                </button>
            </div>
        </div>
    {{/body}}
    {{$footer}}
        <a href="{{ editurl }}" class="btn btn-secondary btn-default">{{#str}} edit, core {{/str}}</a>
        <button type="button" class="btn btn-primary" data-action="hide">{{#str}} close, core_form {{/str}}</button>
    {{/footer}}
{{/ core/modal }}
