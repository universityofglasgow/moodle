{{!
    @template format_flexsections/back_link_in_cms

    Inserted on top of the activity pages in the course in flexsections format

    Example context (json):
    {
        "backtosection": {
            "url": "/course/view.php?id=2&section=1",
            "sectionname": "Section 1"
        }
    }
}}
<div class="flexsections-activity-page-navigate-back">
    {{> format_flexsections/local/navigate_back_to }}
</div>
{{#js}}
    /* Move the widget to the header area */
    const widget = document.querySelector(".flexsections-activity-page-navigate-back");
    const maincontent = document.getElementById('maincontent');
    if (maincontent) {
        maincontent.parentElement.insertBefore(widget, maincontent);
    }
{{/js}}
