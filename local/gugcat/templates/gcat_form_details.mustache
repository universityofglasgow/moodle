{{!
    @template local_gugcat/gcat_custom_select

    The purpose of this template is to render the student details displayed on each GCAT forms.

    Example context (json):
    {
    
    }
}}

<div class="form-container">
    <h5 class="title">{{title}}</h5>
    {{#course}}
    <div class="form-group row">
        <div class="col-md-3">
        <label>Course</label>
        </div>
        <div class="col-md-9 form-inline">{{course.fullname}}</div>
    </div> 
    {{/course}}
    {{#section}}
    <div class="form-group row">
        <div class="col-md-3">
        <label>Assessment</label>
        </div>
        <div class="col-md-9 form-inline">{{section}}</div>
    </div>
    {{/section}}
    {{#student.cnum}}
    <div class="form-group row">
        <div class="col-md-3">
        <label>Candidate No.</label>
        </div>
        <div class="col-md-9 form-inline">{{student.cnum}}</div>
    </div> 
    {{/student.cnum}}
    <div class="form-group row">
        <div class="col-md-3">
        <label>Student No.</label>
        </div>
        <div class="col-md-9 form-inline">{{student.idnumber}}</div>
    </div>
    {{#blindmarking}}
    <div class="form-group row blind-marking">
        <div class="col-md-3">
        <label>Student Name</label>
        </div>
        <div class="col-md-9 form-inline felement"> {{student.firstname}}, {{student.lastname}}</div>
    </div>
    {{/blindmarking}}
    {{#activity}}
    <div class="form-group row">
        <div class="col-md-3">
        <label>Assessment</label>
        </div>
        <div class="col-md-9 form-inline felement">{{activity}}</div>
    </div>  
    {{/activity}}
</div>