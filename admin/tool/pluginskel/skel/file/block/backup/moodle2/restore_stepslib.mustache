/**
 * Defines the structure step to restore one {{ component_name }} block.
 */
class restore_{{ component_name }}_block_structure_step extends restore_structure_step {

    /**
     * Defines the structure to be restored.
     */
    protected function define_structure() {

        $paths = array();

        {{# block_features.backup_moodle2.restore_elements }}
        $paths[] = new restore_path_element('{{ .name }}', '{{ .path }}');
        {{/ block_features.backup_moodle2.restore_elements}}

        return $paths;
    }
    {{# block_features.backup_moodle2.restore_elements}}

    /**
     * Processes the {{ .name }} restore data.
     */
    protected function process_{{ .name }}($data) {
        global $DB;

        return $data;
    }
    {{/ block_features.backup_moodle2.restore_elements}}

