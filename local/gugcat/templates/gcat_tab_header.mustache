{{!
    @template local_gugcat/gcat_tab_header

    The purpose of this template is to render the buttons in header of each GCAT tabs.

    Example context (json):
    { }
}}

<div class="tabcontent-header">
    {{#displayactivities}}
    <div class="selectdiv">
        <select id="select-activity">
            {{#activities}}
                <option {{selected}} value={{gradeitemid}} >{{name}}</option>
            {{/activities}}
        </select>
    </div>
    {{/displayactivities}}
    {{#addallgrdstr}}<button class="btn btn-default btn-blue" id="btn-saveadd">{{addallgrdstr}}</button>{{/addallgrdstr}}
    {{#importgradesstr}}<button class="btn btn-default btn-blue" id="btn-import">{{importgradesstr}}</button>{{/importgradesstr}}
    {{#grddiscrepancystr}}<button class="btn grade-discrepancy" id="btn-grddisc">{{grddiscrepancystr}}</button>{{/grddiscrepancystr}}
    {{#downloadcsvstr}}<button class="btn btn-default btn-download" id="btn-download">{{downloadcsvstr}}</button>{{/downloadcsvstr}}
    {{#releasefinalstr}}<button class="btn btn-default btn-download" id="btn-finalrelease">{{releasefinalstr}}</button>{{/releasefinalstr}}
    {{#releaseprvgrdstr}}<button class="btn btn-default btn-release" id="btn-release">{{releaseprvgrdstr}}</button>{{/releaseprvgrdstr}}
</div>
