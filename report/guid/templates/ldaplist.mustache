{{!                                                                                                                                 
    @report_guid/ldaplist                                                                                                         
                                                                                                                                    
    Display list of search results                                                                                                       
}}

<h3>{{# str }}ldapresults, report_guid{{/ str }}</h3>

{{# ldapresultsempty }}
    <div class="alert alert-warning">
        {{# str }}noresults, report_guid{{/ str }}
    </div>
{{/ ldapresultsempty }}

{{^ ldapresultsempty }}
    {{# toomanyldapresults }}
        <div class="alert alert-warning">
            {{# str }}toomanyldap, report_guid{{/ str }}
        </div>
    {{/ toomanyldapresults }}

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>{{# str }}username{{/ str }}</th>
                    <th>{{# str }}firstname{{/ str }}</th>
                    <th>{{# str }}lastname{{/ str }}</th>
                    <th>{{# str }}email{{/ str }}</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                {{# results }}

                {{/ results }}
            </tbody>
        </table>

    {{^ toomanyldapresults }}
    {{/ toomanyldapresults }}
{{/ ldapresultsempty }}

