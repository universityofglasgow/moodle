{{!
    @template block_newgu_spdetails/course-filter-selector

    This template renders a course filter dropdown.

    Example context (json):
    {
        "creditcourses": false,
        "noncreditcourses": true
    }
}}
<div class="dropdown mb-1">
    <button id="filterdropdown" type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" 
    aria-label="{{#str}} aria:filterdropdown, block_newgu_spdetails {{/str}}">
        <span data-active-item-text>
            {{#data.creditcourses}}{{#str}} filterbycredit, block_newgu_spdetails {{/str}}{{/data.creditcourses}}
            {{#data.noncreditcourses}}{{#str}} filterbynoncredit, block_newgu_spdetails {{/str}}{{/data.noncreditcourses}}
            {{#data.allcourses}}{{#str}} filterall, block_newgu_spdetails {{/str}}{{/data.allcourses}}
        </span>
    </button>
    <ul class="dropdown-menu" role="menu" data-show-active-item data-skip-active-class="true" aria-labelledby="filterdropdown">
        <li>
            <a class="dropdown-item" href="#" data-value="creditcourses" aria-controls="courses-view-{{uniqid}}" role="menuitem" {{#data.creditcourses}}aria-current="true"{{/data.creditcourses}}>
                {{#str}} filterbycredit, block_newgu_spdetails {{/str}}
            </a>
        </li>
        <li>
            <a class="dropdown-item" href="#" data-value="noncreditcourses" aria-controls="courses-view-{{uniqid}}" role="menuitem" {{#data.noncreditcourses}}aria-current="true"{{/data.noncreditcourses}}>
                {{#str}} filterbynoncredit, block_newgu_spdetails {{/str}}
            </a>
        </li>
        <li>
            <a class="dropdown-item" href="#" data-value="allcourses" aria-controls="courses-view-{{uniqid}}" role="menuitem" {{#data.allcourses}}aria-current="true"{{/data.allcourses}}>
                {{#str}} filterall, block_newgu_spdetails {{/str}}
            </a>
        </li>
    </ul>
</div>