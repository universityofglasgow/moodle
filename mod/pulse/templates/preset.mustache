{{!
    @template mod_pulse/preset Preset modal preview content

    Example context (json):
    {
        "title" : "Title of preset",
        "description" : "Description for preset",
        "instruction" : "Instruction content for preset",
        "configparams" : "<form> <input type='hidden' name='importmethod' value='1'> </form>"
    }
}}

<div class="pulse-preset-preview">
    <div class="pulse-preset-preview-parent">
        <div class="preset-preview-content">
            <div class="preset-item-content">
                {{#description}}
                    <div class="description">
                        {{{description}}}
                    </div>
                {{/description}}

                {{#instruction}}
                    <div class="description">
                        {{{instruction}}}
                    </div>
                {{/instruction}}

                {{#configparams}}
                <div class="preset-config-params">
                    {{{configparams}}}
                </div>
                {{/configparams}}
            </div>
        </div>
    </div>
</div>
