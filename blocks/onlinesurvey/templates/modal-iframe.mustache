{{!
    @template block_onlinesurvey/modal-iframe

    Template for modal popup showing an iFrame.

    Context variables required for this template:
    * src - The URL for the iFrame

    Example context (json):
    {
        "src": "/blocks/onlinesurvey/show_surveys.php",
        "title": "Modal popup"
    }
}}

<div class="block_onlinesurvey_custom-modal_container">
    <div class="block_onlinesurvey_custom-modal block_onlinesurvey_custom-modal--iframe">
        <div class="block_onlinesurvey_custom-modal_close-button"></div>
        {{#title}}
        <div class="block_onlinesurvey_custom-modal_title">{{title}}</div>
        {{/title}}
        <div class="block_onlinesurvey_custom-modal_content">
            <iframe name="block_onlinesurvey_custom-modal_contentframe" src="{{{src}}}"></iframe>
        </div>
    </div>
</div>
