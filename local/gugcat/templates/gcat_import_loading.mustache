{{!
    @template local_gugcat/gcat_custom_select

    The purpose of this template is to render the GCAT import loading screen.

    Example context (json):
    {

    }
}}
<div id="import-loading">
    <div class="overlay"></div>
    <div class="container import-container">
        <div class="modal-content import-content">
            <h5 class="font-weight-bold">{{titlestr}}</h5>
            {{contentstr}}
            <div class="spinner-box">
                <div class="pulse-container">
                    <div class="pulse-bubble pulse-bubble-1"></div>
                    <div class="pulse-bubble pulse-bubble-2"></div>
                    <div class="pulse-bubble pulse-bubble-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>
