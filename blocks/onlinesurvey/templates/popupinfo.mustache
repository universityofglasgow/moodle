{{!
    @template block_onlinesurvey/popupinfo

    Template for popup showing some content.

    Context variables required for this template:
    * content - The content of the popup

    Example context (json):
    {
        "content": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
        "title": "Popup information"
    }
}}

<div class="block_onlinesurvey_custom-modal_container">
    <div class="block_onlinesurvey_custom-modal block_onlinesurvey_custom-modal--popupinfo">
        <div class="block_onlinesurvey_custom-modal_close-button"></div>
        {{#title}}
        <div class="block_onlinesurvey_custom-modal_title">{{title}}</div>
        {{/title}}
        {{#content}}
        <div class="block_onlinesurvey_custom-modal_content">{{{content}}}</div>
        {{/content}}
    </div>
</div>
