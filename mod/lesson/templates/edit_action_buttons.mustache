{{!
    @template mod_lesson/edit_action_buttons

    Actions panel for essay grading.

    Classes required for JS:
    * none

    Context variables required for this template:
    * see mod/lesson/classes/output/edit_action_buttons.php

    Example context (json):
    {
        "edit": {
            "button": {
                "method" : "get",
                "url" : "#",
                "formid": "1",
                "primary" : true,
                "tooltip" : "This is a tooltip",
                "label" : "Edit",
                "attributes": [
                    {
                      "name": "data-attribute",
                      "value": "yeah"
                    }
                ]
            }
        },
        "gradeessays": {
            "button": {
                "method" : "get",
                "url" : "#",
                "formid": "2",
                "primary" : false,
                "tooltip" : "This is a tooltip",
                "label" : "Grade essays",
                "attributes": [
                    {
                      "name": "data-attribute",
                      "value": "yeah"
                    }
                ]
            }
        }
    }

}}
<div class="container-fluid mb-2">
    <div class="row">
        <div class="col-xs-6 pr-1">
            {{#edit}}
                {{#button}}
                    {{>core/single_button}}
                {{/button}}
            {{/edit}}
        </div>
        <div class="col-xs-6">
            {{#gradeessays}}
                {{#button}}
                    {{>core/single_button}}
                {{/button}}
            {{/gradeessays}}
        </div>
    </div>
</div>

