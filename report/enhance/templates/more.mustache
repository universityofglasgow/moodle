{{!
    @template report_ehnace/elist

    This template renders the form for new/edit requests

    Example context (json):
    {}
}}

<h1 class="m-b-1">{{ request.headline }}</h1>

<dl class="row">
    <dt class="col-xs-4 col-sm-3">{{# str }}requestnumber, report_enhance{{/ str }}</dt>
    <dd class="col-xs-8 col-sm-9">{{ request.id }}</dd>
</dl>

<dl class="row">
    <dt class="col-xs-4 col-sm-3">{{# str }}submittedby, report_enhance{{/ str }}</dt>
    <dd class="col-xs-8 col-sm-9">{{ request.username }}</dd>
</dl>

<dl class="row">
    <dt class="col-xs-4 col-sm-3">{{# str }}submittedon, report_enhance{{/ str }}</dt>
    <dd class="col-xs-8 col-sm-9">{{ request.userdate }}</dd>
</dl>

{{#request.department}}
<dl class="row">
    <dt class="col-xs-4 col-sm-3">{{# str }}department, report_enhance{{/ str }}</dt>
    <dd class="col-xs-8 col-sm-9">{{ request.department }}</dd>
</dl>
{{/request.department}}

<dl class="row m-b-0">
    <dt class="col-xs-4 col-sm-3">{{# str }}status, report_enhance{{/ str }}</dt>
    <dd class="col-xs-8 col-sm-9"><span class="inline-status status-{{ request.statuscolour }}"><i class="fa fa-{{ request.statusicon }}"></i> {{ request.statusformatted }}</span></dd>
</dl>
</div>
</div>

{{#request.description}}
<div class="card m-t-1 m-b-1">
<dl class="row m-b-0">
    <dt class="col-xs-4 col-sm-3">{{# str }}description, report_enhance{{/ str }}</dt>
    <dd class="col-xs-8 col-sm-9">{{{ request.description }}}</dd>
</dl>
</div>
{{/request.description}}

{{#request.benefits}}
<div class="card m-b-1">
<dl class="row m-b-0">
    <dt class="col-xs-4 col-sm-3">{{# str }}benefits, report_enhance{{/ str }}</dt>
    <dd class="col-xs-8 col-sm-9">{{{ request.benefits }}}</dd>
</dl>
</div>
{{/request.benefits}}

{{#request.desirability}}
<div class="card m-b-1">
<dl class="row m-b-0">
    <dt class="col-xs-4 col-sm-3">{{# str }}desirability, report_enhance{{/ str }}</dt>
    <dd class="col-xs-8 col-sm-9">{{{ request.desirability }}}</dd>
</dl>
</div>
{{/request.desirability}}

{{#request.impact}}
<div class="card m-b-1">
<dl class="row m-b-0">
    <dt class="col-xs-4 col-sm-3">{{# str }}impact, report_enhance{{/ str }}</dt>
    <dd class="col-xs-8 col-sm-9">{{{ request.impact }}}</dd>
</dl>
</div>
{{/request.impact}}

{{#request.viability}}
<div class="card m-b-1">
<dl class="row m-b-0">
    <dt class="col-xs-4 col-sm-3">{{# str }}viability, report_enhance{{/ str }}</dt>
    <dd class="col-xs-8 col-sm-9">{{{ request.viability }}}</dd>
</dl>
</div>
{{/request.viability}}

{{#request.result}}
<div class="card m-b-1">
<dl class="row m-b-0">
    <dt class="col-xs-4 col-sm-3">{{# str }}result, report_enhance{{/ str }}</dt>
    <dd class="col-xs-8 col-sm-9">{{{ request.result }}}</dd>
</dl>
</div>
{{/request.result}}

<div class="card m-b-1">
<dl class="row m-b-0">
    <dt class="col-xs-4 col-sm-3">{{# str }}attachments, report_enhance{{/ str }}</dt>
    <dd class="col-xs-8 col-sm-9">
        <ul>
            {{# attachments }}
                <li><a href="{{{ url }}}">{{ name }}</li>
            {{/ attachments }}
        </ul>
    </dd>
</dl>
</div>

<a class="btn btn-primary" href="{{{ back }}}">{{# str }}back{{/ str }}</a>
{{# allowedit }}
    <a class="btn btn-warning" href="{{{ editurl }}}">{{# str }}edit, report_enhance{{/ str }}</a>
{{/ allowedit }}
{{# allowreview }}
    <a class="btn btn-warning" href="{{{ reviewurl }}}">{{# str }}review, report_enhance{{/ str }}</a>
{{/ allowreview }}
