{{!
    @template report_ehnace/elist

    This template renders the list of enhancements area for report_enhance

    Example context (json):
    {}
}}

<h1>VLE Enhancement requests</h1>

<p>Filters / search etc. go here</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Submitted by</th>
            <th>Description</th>
            <th>Submission date</th>
            <th>Status</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        {{# requests }}
            <tr>
                <td>{{ id }}</td>
                <td>{{ username }}</td>
                <td>{{{ description }}}</td>
                <td>{{ userdate }}</td>
                <td>{{ statusformatted }}</td>
                <td>
                    <a href="{{{ more }}}" class="btn btn-success btn-sm">More...</a>
                    <a href="{{{ link }}}" class="btn btn-primary btn-sm">Edit...</a>
                    <a href="{{{ review }}}" class="btn btn-primary btn-sm">Review...</a>
                </td>
            </tr>
        {{/ requests }}
    </tbody>
</table>

<div>
    <a href="{{ formurl }}" class="btn btn-info">New request</a>
</div>
