{{!
    @template local_gugcat/modal_gcat

    The purpose of this template is to render the GCAT custom UI modal.

    Example context (json):
    { }
}}
{{< core/modal }}
        {{$title}}{{/title}}
        {{$body}}
            {{{bodycontent}}}
        {{/body}}
        {{$footer}}
            <button type="button" class="btn btn-default btn-modal-cancel" data-action="cancel">
                {{{strcancel}}}
            </button>
            <button type="button" class="btn btn-default btn-release" data-action="{{dataaction}}">
                {{{strconfirm}}}
            </button>
        {{/footer}}
{{/ core/modal }}