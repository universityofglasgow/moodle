{{!
    @template theme_boost/flat_navigation

    Display the flat navigation for the boost theme

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * flatnavigation - array of flat_navigation_nodes
      * showdivider - boolean
      * action - string
      * isactive - boolean
      * get_indent - integer
      * is_section - boolean
      * text - HTML

    Example context (json):
    {
        "flatnavigation" : [
            {
                "showdivider": false,
                "action": "#",
                "isactive": true,
                "get_indent": 1,
                "is_section": false,
                "text": "First"
            },{
                "showdivider": true,
                "action": "#",
                "isactive": false,
                "get_indent": 0,
                "is_section": true,
                "text": "Last &amp; Second"
            }
        ]
    }
}}

{{#sitenavexists}}
<ul><li class="accessibility-link">{{{accessibilityButton}}}</li></ul>
<h2>Moodle</h2>
<ul>
{{#sitenav}}
    <li>
        <a href="{{{action}}}">
            <div class="media">
                {{#icon.pix}}
                    <span class="media-left">
                        {{#pix}}{{{icon.pix}}}, {{{icon.component}}}, {{{icon.alt}}}{{/pix}}
                    </span>
                {{/icon.pix}}
                <span class="media-body">{{{text}}}</span>
            </div>
        </a>
    </li>
{{/sitenav}}
