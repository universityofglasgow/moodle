{{!
    @template local_gugcat/gcat_tab_header

    The purpose of this template is to render the buttons in header of each GCAT tabs.

    Example context (json):
    { }
}}

<div class="tabcontent-header">
    {{#displayactivities}}
        <div class="selectdiv">
            <select id="select-activity">
                {{#activities}}
                    <option {{selected}} value={{gradeitemid}} >{{name}}</option>
                {{/activities}}
            </select>
        </div>
    {{/displayactivities}}
    {{#adjustgrdstr}}<button class="btn btn-default" data-toggle="dropdown">{{adjustgrdstr}}<i class="fa fa-caret-down"></i></button>{{/adjustgrdstr}}
    <div class="dropdown-menu">
        {{#importgradesstr}}<a class="dropdown-item" href="#" id="btn-import">{{importgradesstr}}</a>{{/importgradesstr}}
        {{#uploadaddgrdstr}}<a class="dropdown-item" href="{{uploadurl}}">{{uploadaddgrdstr}}</a>{{/uploadaddgrdstr}}
        {{#addallgrdstr}}<a class="dropdown-item" href="#" id="btn-saveadd">{{addallgrdstr}}</a>{{/addallgrdstr}}
        {{#adjustassconvstr}}<a class="dropdown-item" href="{{converturl}}">{{adjustassconvstr}}</a>{{/adjustassconvstr}}
    </div>
    {{#downloadcsvstr}}<button class="btn btn-default" id="btn-download">{{downloadcsvstr}}</button>{{/downloadcsvstr}}
    {{#releasefinalstr}}<button class="btn btn-default btn-release" id="btn-finalrelease">{{releasefinalstr}}</button>{{/releasefinalstr}}
    {{#releaseprvgrdstr}}<button class="btn btn-default btn-release" id="btn-release">{{releaseprvgrdstr}}</button>{{/releaseprvgrdstr}}
    {{#grddiscrepancystr}}<button class="btn grade-discrepancy" id="btn-grddisc">{{grddiscrepancystr}}</button>{{/grddiscrepancystr}}
    {{#saveallgrdstr}}<button class="btn btn-default hidden" id="btn-cancelmulti">{{cancelbtnstr}}</button>{{/saveallgrdstr}}
    {{#saveallgrdstr}}<button class="btn btn-default btn-blue hidden" id="btn-multisave">{{saveallgrdstr}}</button>{{/saveallgrdstr}}
    {{#displaychildactivities}}
    <div class="selectdiv child-select">
        <select id="select-child-act">
            {{#childactivities}}
                <option {{selected}} value={{gradeitemid}} >{{name}}</option>
            {{/childactivities}}
        </select>
    </div>
    <button class="btn btn-default" id="btn-blkimport">{{blkimportstr}}</button>
    {{/displaychildactivities}}
</div>
