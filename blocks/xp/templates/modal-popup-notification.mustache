{{!
    @template block_xp/modal-popup-notification

    Modal popup notification.

    Example context (json):
    {
    }
}}
{{< core/modal }}
    {{$title}}
        {{! Note, the title won't display on Moodle 3.3 with Boost due to incorrect template. }}
        {{#str}} congratulationsyouleveledup, block_xp {{/str}}
    {{/title}}
    {{$body}}
        <div class="block_xp">
            <div class="xp-text-center">
                {{#levelname}}
                    {{#str}}youreachedlevel, block_xp{{/str}}
                {{/levelname}}
                {{^levelname}}
                    {{#str}}youreachedlevela, block_xp, {{levelnum}}{{/str}}
                {{/levelname}}
            </div>
            <div class="">
                {{{levelbadge}}}
            </div>
            {{#levelname}}
                <div class="xp-text-center xp-font-bold">
                    {{levelname}}
                </div>
            {{/levelname}}
            {{#message}}
            <div class="xp-mt-6 xp-text-lg xp-flex xp-justify-center">
                {{{message}}}
            </div>
            {{/message}}
        </div>
    {{/body}}
    {{$footer}}
        <button type="button" class="btn btn-primary" data-action="hide">{{#str}} coolthanks, block_xp {{/str}}</button>
    {{/footer}}
{{/ core/modal }}

