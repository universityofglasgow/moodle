{{!
    @template report_ehnace/elist

    This template renders the form for new/edit requests

    Example context (json):
    {}
}}

<h1>Review ehancement request</h1>

    <div class="border-bottom mb-4">

    <h4>#{{ request.id }} "{{ request.headline }}"</h4>

    <p><strong>Service:</strong> {{ request.serviceformatted }}</p>

    <p><strong>Department:</strong> {{ request.department }}</p>

    <p><strong>Audience:</strong> {{ request.audienceformatted }}</p>

    <h3>Description</h3>

    {{{ request.description }}}

    <h3>Benefits</h3>

    {{{ request.benefits }}}

    <h3>Transferability</h3>

    {{{ request.transferability }}}

</div>

<div>
    {{{ form }}}
</div>
